@model IEnumerable<TF_TI2_19269_19262.Models.Series>

@{
    ViewBag.Title = "Index";
}

<div style="text-align:center">
    <h2 style="padding:20px 0px 20px 0px">
        Lista De Series
    </h2>
    <div style="padding:0px 0px 30px 0px">
        <button>
            @Html.ActionLink("Adicionar Serie", "Create")
        </button>
    </div>

</div>
<div style="display: flex;flex-direction: column;">
    @foreach (var item in Model)
    {
        <div style="    border: 2px solid black;
    width: 100%;
    height: 400px;
    overflow: hidden;
    text-align: center;margin: 20px;display:flex;flex-direction:row">
            <div style="padding-right:20px">
                <a href="~/Imagens/@item.Foto" target="_blank">
                    <img src="~/Imagens/@item.Foto" width="400" height="400" />
                </a>
            </div>
            <div style="display:flex;flex-direction:column;padding-left:20px;padding-right:20px;padding-top:20px">
                <div style="padding-bottom:20px">
                    @Html.DisplayFor(modelItem => item.Nome)
                </div>
                <div style="padding-bottom:20px">
                    @Html.DisplayFor(modelItem => item.Editora.Nome)
                </div>
                <div style="padding-bottom:20px">
                    <div>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Classificacao)
                    </div>
                </div>
                <div style="padding-bottom:20px;overflow:hidden; border:1px solid">
                    <p>@Html.DisplayNameFor(model => model.Sinopse)</p>
                    <p> @Html.DisplayFor(modelItem => item.Sinopse)</p> 
                </div>
                <div style="padding-bottom:30px;padding-top:20px">
                    <button >
                        @Html.ActionLink("Temporadas", "../Temporadas/Index", new { id = item.ID })
                    </button>
                </div>
                
                <div style="padding-bottom:20px">
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
                </div>
            </div>
            
        </div>
    }

</div>
<button>
    @Html.ActionLink("Voltar á Página Inicial", "../Home/Index")
</button>
      
