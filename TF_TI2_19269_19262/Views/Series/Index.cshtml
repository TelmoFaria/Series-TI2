@model IEnumerable<TF_TI2_19269_19262.Models.Series>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Administrador")) { 
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EditoraFK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sinopse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classificacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Editora.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                <a href="~/Imagens/@item.Foto" target="_blank">
                    <img src="~/Imagens/@item.Foto" width="74" height="100" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopse)
            </td>
            <td>


                <iframe src="https://www.youtube.com/embed/@Html.DisplayFor(modelItem => item.Video)" allowfullscreen></iframe>


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                @if (User.IsInRole("Administrador"))
                {
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID });
                    @Html.Raw("   "); 
                    @Html.ActionLink("Apagar", "Delete", new { id = item.ID });
                    @Html.Raw("   ");
                }
                @Html.ActionLink("Detalhes", "Details", new { id = item.ID })

            </td>
        </tr>
    }

</table>
