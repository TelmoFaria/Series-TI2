@model IEnumerable<TF_TI2_19269_19262.Models.Series>

@{
    ViewBag.Title = "Index";
}


<div style="text-align:center">
    <h2 style="padding:20px 0px 20px 0px">
        Lista De Series
    </h2>
    @if (User.IsInRole("Administrador"))
    {
        <div style="padding:0px 0px 30px 0px">

            <button>
                @Html.ActionLink("Adicionar Serie", "Create")
            </button>
    
        </div>
    }
</div>
<div style="display: flex;flex-direction: row;flex-wrap: wrap;padding:20px;">
    @foreach (var item in Model)
    {        
            <div style="padding:50px">
                <a href="~/Series/Details/@item.ID">
                    <img src="~/Imagens/@item.Foto" width="300" height="300" />
                </a>
            </div>       
    }

</div>


<button>
    @Html.ActionLink("Voltar á Página Inicial", "../Home/Index")
</button>
      
