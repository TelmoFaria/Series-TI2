@model TF_TI2_19269_19262.Models.Pessoas

@{
    ViewBag.Title = "Details";
}
<link href="~/CSS/MyCSS/PessoasDetails.css" rel="stylesheet" />

<div class="pessoas_details_wrapper">

    <div class="pessoas_details_action">
        <h2>Detalhes</h2>
    </div>

    <div class="pessoas_details_content_wrapper">
        <div class="pessoas_details_img">
            <img src="~/Imagens/@Model.Foto" width="400" />
        </div>

        <div class="pessoas_details_content_info_wrapper">
            <div class="pessoas_details_content_nome">
                <span>@Html.DisplayFor(model => model.Nome)</span>
            </div>
            <div class="pessoas_details_content_info">
                <table class="table">
                    <h3>Papeis que desempenhou :</h3>
                    <tr>
                        <th>
                            @Html.LabelFor(a => Model.PessoasEpisodios.First().Episodio.Temporada.Serie.Nome, "Nome da Série")
                        </th>
                        <th>
                            @Html.LabelFor(a => Model.PessoasEpisodios.First().Episodio.Temporada.Nome, "Nome da Temporada (Numero)")
                        </th>
                        <th>
                            @Html.LabelFor(a => Model.PessoasEpisodios.First().Episodio.Nome , "Nome do Episódio (Numero)")
                        </th>
                        <th>
                            @Html.DisplayNameFor(a => Model.PessoasEpisodios.First().Papel)
                        </th>
                    </tr>

                    @foreach (var pap in Model.PessoasEpisodios)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(a => pap.Episodio.Temporada.Serie.Nome) 
                            </td>
                            <td>
                                @Html.DisplayFor(a => pap.Episodio.Temporada.Nome) (@Html.DisplayFor(a => pap.Episodio.Temporada.Numero))
                            </td>
                            <td>
                                @Html.DisplayFor(a => pap.Episodio.Nome) (@Html.DisplayFor(a => pap.Episodio.Numero))
                            </td>
                            <td>
                                @Html.DisplayFor(a => pap.Papel)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<div id="opt">
    <img id="options" src="~/Imagens/options.png" alt="" />
</div>
<div class="sidebar_nav">
    <span>@Html.ActionLink("Voltar à Lista", "Index")</span>

    @if (User.IsInRole("Administrador"))
    {
    <span>@Html.ActionLink("Editar ", "Edit", new { id = Model.ID })</span>
    }
</div>