@model IEnumerable<TF_TI2_19269_19262.Models.Temporadas>

@{
    ViewBag.Title = "Index";
}

<div style="text-align:center">
    <h2 style="padding:20px 0px 20px 0px">
        Lista De Temporadas
    </h2>
</div>

<div>
    @foreach (var item in Model)
    {
        <div style="    border: 2px solid black;
    width: 100%;
    height: 400px;
    overflow: hidden;
    text-align: center;margin: 20px;display:flex;flex-direction:row">
            <div style="padding-right:20px">
                <a href="~/Imagens/@item.Foto" target="_blank">
                    <img src="~/Imagens/@item.Foto" width="400" height="400" />
                </a>
            </div>
            <div style="display:flex;flex-direction:column;padding-right:20px;padding-top:20px;margin:auto">
                <div style="padding-bottom:20px;padding-top:20px;display:flex;flex-direction:row;margin:auto">
                    <div style="padding:10px 20px 10px 20px;display:flex;flex-direction:column">
                        <p>
                            Série:
                        </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Series.Nome)
                        </p>
                    </div>
                    <div style="padding:10px 20px 10px 20px;display:flex;flex-direction:column">
                        <p>
                            Temporada:
                        </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Numero)
                        </p>
                    </div>
                </div>


                <p style="padding-bottom:20px;">
                    <iframe src="https://www.youtube.com/embed/@Html.DisplayFor(modelItem => item.Trailer)" allowfullscreen></iframe>
                </p>
                <div style="padding-bottom:10px;">
                        @Html.ActionLink("Episódios", "../Episodios/Index", new { id = item.ID })
                </div>

                <p style="padding-bottom:20px">
                    @if (User.IsInRole("Administrador"))
                    {<text>
                            @Html.ActionLink("Editar Temporada", "Edit", new { id = item.ID })
                            @Html.Raw("|")
                            @Html.ActionLink("Eliminar Temporada", "Delete", new { id = item.ID })
                    </text>
                }
                </p>
            </div>
        </div>
    }
</div>
<div id="opt">
    <img id="options" src="~/Imagens/options.png" alt="" width="20" height="20" />
</div>
<div class="sidebar_nav">
    <span>@Html.ActionLink("Voltar à Página Inicial", "../Home/Index")</span>

    @if (User.IsInRole("Administrador"))
    {
    <span>@Html.ActionLink("Criar Nova Temporada", "Create")</span>
    }
</div>






