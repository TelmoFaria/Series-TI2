@model IEnumerable<TF_TI2_19269_19262.Models.PessoasEpisodios>

@{
    ViewBag.Title = "Index";
}

<h2>Papéis</h2>

<p>
    @Html.ActionLink("Adicionar Papel", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome da Série
        </th>
        <th>
            Nome da Temporada
        </th>
        <th>
            Nome do Episódio
        </th>
        <th>
            Nome da Pessoa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Papel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Episodio.Temporada.Serie.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Episodio.Temporada.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Episodio.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Papel)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
